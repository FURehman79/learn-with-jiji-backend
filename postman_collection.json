{
  "info": {
    "name": "Learn with Jiji API",
    "description": "API endpoints for Learn with Jiji backend service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        },
        "description": "Check if the API is running"
      }
    },
    {
      "name": "Ask Jiji (Anonymous)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"query\": \"Explain RAG\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/ask-jiji",
          "host": ["{{base_url}}"],
          "path": ["ask-jiji"]
        },
        "description": "Query Jiji without authentication"
      }
    },
    {
      "name": "Ask Jiji (Authenticated)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"query\": \"What is artificial intelligence?\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/ask-jiji",
          "host": ["{{base_url}}"],
          "path": ["ask-jiji"]
        },
        "description": "Query Jiji with authentication token"
      }
    },
    {
      "name": "Ask Jiji - Validation Error",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"query\": \"AI\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/ask-jiji",
          "host": ["{{base_url}}"],
          "path": ["ask-jiji"]
        },
        "description": "Test validation error (query too short)"
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/api/v1",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "your_auth_token_here",
      "type": "string"
    }
  ]
}
